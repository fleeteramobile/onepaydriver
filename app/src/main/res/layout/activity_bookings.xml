<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".bookings.BookingsActivity">
 <androidx.constraintlayout.widget.ConstraintLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:id="@+id/header_lay"
     app:layout_constraintTop_toTopOf="parent"
     android:background="@drawable/header_background_shape_new"
     tools:ignore="MissingConstraints">
  <ImageButton
      android:id="@+id/backButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:contentDescription="Back"
      android:padding="8dp"
      android:src="@drawable/ic_arrow_back_white"
      app:tint="@android:color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/titleTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text=" Trips"
      android:textColor="@android:color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/backButton"
      app:layout_constraintStart_toEndOf="@id/backButton"
      app:layout_constraintTop_toTopOf="@+id/backButton" />

 </androidx.constraintlayout.widget.ConstraintLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
  android:orientation="vertical"
     android:layout_margin="20dp"
  app:layout_constraintTop_toBottomOf="@+id/header_lay">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:paddingBottom="16dp">


    <LinearLayout
        android:id="@+id/active_trip"
        style="@style/ProfileMenuItemStyle"
        android:clickable="true"
        android:focusable="true">

     <ImageView
         android:layout_width="24dp"
         android:layout_height="24dp"
         android:src="@drawable/ic_active_booking" />

     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="16dp"
         android:layout_weight="1"
         android:text="Ongoing Booking"
         android:textColor="@color/txt_primary_main"
         android:textSize="16sp" />

     <ImageView
         android:layout_width="24dp"
         android:layout_height="24dp"

         android:src="@drawable/ic_arrow_forward"
         app:tint="@color/icon_secondary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_light" />

    <LinearLayout
        android:id="@+id/schdule_item"
        style="@style/ProfileMenuItemStyle"
        android:clickable="true"
        android:focusable="true">

     <ImageView
         android:layout_width="24dp"
         android:layout_height="24dp"

         android:src="@drawable/ic_completed" />

     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="16dp"
         android:layout_weight="1"
         android:text="New Bookings"
         android:textColor="@color/txt_primary_main"
         android:textSize="16sp" />

     <ImageView
         android:layout_width="24dp"
         android:layout_height="24dp"

         android:src="@drawable/ic_arrow_forward"
         app:tint="@color/icon_secondary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_light" />

       <LinearLayout
           android:id="@+id/upcoming_item"
           style="@style/ProfileMenuItemStyle"
           android:clickable="true"
           android:focusable="true">

           <ImageView
               android:layout_width="24dp"
               android:layout_height="24dp"

               android:src="@drawable/ic_completed" />

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_weight="1"
               android:text="Accepted Bookings"
               android:textColor="@color/txt_primary_main"
               android:textSize="16sp" />

           <ImageView
               android:layout_width="24dp"
               android:layout_height="24dp"

               android:src="@drawable/ic_arrow_forward"
               app:tint="@color/icon_secondary" />
       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/divider_light" />


       <LinearLayout
        android:id="@+id/completed_trip"
        style="@style/ProfileMenuItemStyle"
        android:clickable="true"
        android:focusable="true">

     <ImageView
         android:layout_width="24dp"
         android:layout_height="24dp"
         android:src="@drawable/ic_completed" />

     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="16dp"
         android:layout_weight="1"
         android:text="Completed Bookings"
         android:textColor="@color/txt_primary_main"
         android:textSize="16sp" />

     <ImageView
         android:layout_width="24dp"
         android:layout_height="24dp"
         android:src="@drawable/ic_arrow_forward"
         app:tint="@color/icon_secondary" />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_light" />



   </LinearLayout>


  </LinearLayout>
 </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>