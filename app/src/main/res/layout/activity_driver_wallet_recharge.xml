<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/pure_white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/giff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:layout_below="@+id/loading"
        android:visibility="gone"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center"

                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="bottom"

                    android:orientation="vertical">


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/txt_light_gray" />

                    <TextView
                        style="@style/enterTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:drawablePadding="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:text="@string/walletmsg"

                        android:textColor="@color/txt_light_gray" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/walletPageIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                   />




            </FrameLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_marginTop="10dp"
                android:background="@color/pure_white"
                android:orientation="vertical"
                android:padding="1dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/taxi__button_height"
                    android:layout_below="@+id/body_lay"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/txt_light_gray" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/taxi__button_height"
                        android:layout_below="@+id/body_lay"
                        android:layout_gravity="center"

                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/recharge_money"
                        android:textColor="@color/pure_black"
                        android:textSize="16sp" />
                </FrameLayout>







            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/header_wallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@color/app_theme_main">


        <androidx.cardview.widget.CardView
            android:id="@+id/back_trip_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="19dp"
            app:cardElevation="5dp"
            card_view:cardBackgroundColor="@android:color/white"

            >

            <ImageView
                android:id="@+id/callText"
                style="@style/enterTxt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"

                android:textAllCaps="false"


                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/header_wallet"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_theme_main"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/tool_bar_lay"
                android:layout_width="match_parent"

                android:layout_marginTop="20dp"
                android:layout_height="75dp"

                >



                    <ImageView

                        style="@style/enterTxt"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_back_white"
                        app:tint="@android:color/white"
                        android:textAllCaps="false"
                        android:layout_marginRight="1dp"


                        android:textSize="14sp" />





            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/app_theme_main">


            <androidx.cardview.widget.CardView
                android:id="@+id/complete_booking_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@color/pure_white"
                card_view:cardCornerRadius="15dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"

                        >

                        <TextView
                            android:id="@+id/total_balance"
                            style="@style/enterTxt"
                            android:layout_width="wrap_content"


                            android:layout_height="wrap_content"

                            android:text="Total Balance"

                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="#999999"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/walletbalTxt"
                            style="@style/enterTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/total_balance"
                            android:layout_centerHorizontal="true"

                            android:fontFamily="@font/inter_semibold"
                            android:text=""
                            android:textColor="#018947"
                            android:textSize="25dp" />
                    </RelativeLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </FrameLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="5dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/cur_sym"
                style="@style/edittext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#979797"
                android:text="â‚¹" />

            <EditText
                android:id="@+id/addmoneyEdt"
                style="@style/enterTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/clr_transparent"
                android:gravity="center_vertical"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#979797"
                />

        </LinearLayout>





        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addmoneyBut"
            style="@style/enterTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/draw_curve_rect_accept_end"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/addmoney"
            android:textAllCaps="false"
            android:textColor="@color/pure_white"
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>


</RelativeLayout>