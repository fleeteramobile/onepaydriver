<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F7FB">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F4F7FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_lay_top"
            tools:ignore="MissingConstraints">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/app_theme_main"

           >

                <!-- Back Button -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/header_background_shape"
                    android:padding="20dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Onepay Driver"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20sp"

                        app:layout_constraintTop_toBottomOf="@id/app_name"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textColor="@android:color/white"
                        android:alpha="0.8"
                        app:layout_constraintTop_toBottomOf="@id/greeting"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:id="@+id/driver_profile_image"
                        android:src="@drawable/ic_profile"
                        app:shapeAppearanceOverlay="@style/circularImageViewStyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/stats_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"

                app:cardUseCompatPadding="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                app:cardCornerRadius="16dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="20dp">

                    <TextView
                        android:id="@+id/today_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today so far"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Trips -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/trips_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#EEF3FF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/time_card"
                        app:layout_constraintTop_toBottomOf="@id/today_title">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:id="@+id/total_trips"
                                android:textSize="22sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Trips"

                                android:textSize="12sp"/>
                        </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Login Time -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/time_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFF3E8"
                        app:layout_constraintStart_toEndOf="@id/trips_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/today_title">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#000"
                                android:id="@+id/total_earnings_txt"
                                android:textSize="16dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Earnings"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mytrip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Start Duty"
                        android:backgroundTint="#4F6EF7"
                        android:textColor="@android:color/white"
                        app:cornerRadius="12dp"
                        app:layout_constraintTop_toBottomOf="@id/trips_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/logout_btn"
                        app:layout_constraintHorizontal_chainStyle="spread"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/logout_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="12dp"
                        android:text="Logout"
                        android:backgroundTint="#F44336"
                        android:textColor="@android:color/white"
                        app:cornerRadius="12dp"
                        app:layout_constraintTop_toBottomOf="@id/trips_card"
                        app:layout_constraintStart_toEndOf="@id/mytrip"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- RecyclerView overlaid below the header -->

        </FrameLayout>

        <!-- ================= HEADER ================= -->

        <!-- ================= STATS CARD ================= -->

        <!-- ================= FEATURE SECTION ================= -->



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/wallet_lay"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@id/card_lay_top"

            android:weightSum="2"
            tools:ignore="MissingConstraints">

            <!-- ================= Happy Ratings ================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"

                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle_yellow"
                        android:padding="8dp"
                        android:src="@drawable/wallet_pink" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet Balance"
                            android:textColor="#777"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/wallet_balance"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= Update KYC ================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/schdule_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"

                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle_blue"
                        android:padding="8dp"
                        android:src="@drawable/ic_schdule_time"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="New Booking"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feature_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:background="@color/app_theme_main"
            app:layout_constraintTop_toBottomOf="@id/wallet_lay">


            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F7FB"
                >

                <!-- Bookings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBookings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardEarnings"
                    app:layout_constraintTop_toTopOf="parent"
                >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_blue"
                            android:padding="14dp"
                            android:src="@drawable/ic_bookings"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Bookings"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Earnings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEarnings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintStart_toEndOf="@id/cardBookings"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
               >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_green"
                            android:padding="14dp"
                            android:src="@drawable/ic_earnings" />

                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="Earnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- History -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"

                    app:cardUseCompatPadding="true"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardAccounts"
                    app:layout_constraintTop_toBottomOf="@id/cardBookings"

                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_purple"
                            android:padding="14dp"
                            android:src="@drawable/ic_bookings"/>

                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="History"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#333"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Accounts -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAccounts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"

app:cardUseCompatPadding="true"

                    app:layout_constraintStart_toEndOf="@id/cardHistory"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardEarnings"

                  >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_orange"
                            android:padding="14dp"
                            android:src="@drawable/ic_profile"/>

                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="Accounts"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"

        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
