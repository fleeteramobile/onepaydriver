<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE">

    <!-- Back -->
    <ImageView
        android:id="@+id/backClick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Step -->
    <TextView
        android:id="@+id/tvStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2"
        android:textColor="#7B6EF6"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/backClick"
        app:layout_constraintBottom_toBottomOf="@id/backClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Illustration -->
    <ImageView
        android:id="@+id/ivIllustration"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/enable_locations"
        android:contentDescription="Verification"
        app:layout_constraintTop_toBottomOf="@id/tvStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Verification"
        android:textColor="#222222"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Enter 4 digit number that sent to\n+91 9001233459"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OTP Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOtp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <EditText

                android:id="@+id/otp1"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:textSize="18dp"
                android:hint="."
                android:maxLength="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@drawable/bg_otp_box"
            />


            <EditText

                android:id="@+id/otp2"
                android:layout_width="48dp"
                android:textSize="18sp"
                android:hint="."
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="1"

                android:background="@drawable/bg_otp_box"
                android:layout_height="56dp"
                android:layout_margin="6dp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="48dp"
                android:textSize="18sp"
                android:hint="."
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_otp_box"
                android:layout_height="56dp"
                android:layout_margin="6dp"  />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="48dp"
                android:textSize="18sp"
                android:hint="."
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_otp_box"
                android:layout_height="56dp"
                android:layout_margin="6dp"  />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/otp_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:text="OTP : 2022"
        style="@style/edittext_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/cardOtp"
        android:visibility="visible" />


    <!-- Continue -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_purple_button"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/otp_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Resend -->
    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Re-send code in 0:30"
        android:textColor="#7B6EF6"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
