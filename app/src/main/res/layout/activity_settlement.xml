<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardroot_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="56dp"

        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:visibility="gone">

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/header_titleTxt1"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:padding="3dp"
            android:text="@string/history_list"
            android:textColor="@color/pure_white" />

        <TextView
            android:id="@+id/header_titleTxt2"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="@string/wallet_history1"
            android:textColor="@color/pure_white"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"

            android:visibility="visible" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_curve_rect_accept_end"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/slide_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:padding="10dp">




                <ImageView
                    android:id="@+id/callText"
                    style="@style/enterTxt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_arrow_back_white"
                    app:tint="@android:color/white"
                    android:textAllCaps="false"
                    android:textSize="14sp" />



        </RelativeLayout>
        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="right|center"

            android:layout_marginTop="15dp"
            android:text="Available Balance"
            android:textSize="16dp"
            style="@style/edittext_style"
            android:textColor="@color/pure_white"
            tools:textColor="@color/pure_white" />
        <TextView

            android:id="@+id/wallet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textColor="@color/pure_white"
            android:gravity="right|center"

            android:text=""
            android:textSize="34dp"
            style="@style/edittext_style"
            tools:textColor="@color/pure_white" />
    </LinearLayout>

    <TextView
        android:id="@+id/nodataTxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/nodata"
        android:textColor="@color/pure_black"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/corporate_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>