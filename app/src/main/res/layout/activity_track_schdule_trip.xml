<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Map Fragment - occupies space above the bottom sheet and action buttons -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_action_buttons_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Sheet CardView - contains trip details -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_action_buttons_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Inner ConstraintLayout for the card's content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"> <!-- Padding at the bottom for content spacing -->

            <!-- Profile Avatar (ShapeableImageView for circular shape) -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circularImageViewStyle" />

            <!-- Profile Name Text (aligned vertically with avatar) -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text=""
                android:textSize="18sp"
                style="@style/edittext_style_bold"

                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/profile_avatar"
                app:layout_constraintEnd_toStartOf="@+id/payment_method_button"
                app:layout_constraintStart_toEndOf="@+id/profile_avatar"
                app:layout_constraintTop_toTopOf="@+id/profile_avatar" />

            <!-- Payment Method Button (aligned vertically with avatar) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/payment_method_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Cash"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/app_theme_main"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profile_avatar" />

            <!-- Origin Icon - positioned below the profile section -->
            <ImageView
                android:id="@+id/origin_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Origin Location Icon"
                android:src="@drawable/pickup"
                app:layout_constraintStart_toStartOf="@+id/profile_avatar"
                app:layout_constraintTop_toBottomOf="@+id/profile_avatar" />

            <!-- Origin Name -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/origin_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text=""
                android:textStyle="bold"
                style="@style/edittext_style_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/origin_icon"
                app:layout_constraintTop_toTopOf="@+id/origin_icon" />

            <!-- Origin Address -->
            <TextView
                android:id="@+id/origin_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@+id/origin_icon"
                app:layout_constraintTop_toBottomOf="@+id/origin_address" />

            <!-- Dotted Line connecting origin and destination icons -->
            <View
                android:id="@+id/dotted_line"
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="@+id/origin_icon"
                app:layout_constraintStart_toStartOf="@+id/origin_icon"
                app:layout_constraintTop_toBottomOf="@+id/origin_icon" />

            <!-- Destination Icon -->
            <ImageView
                android:id="@+id/destination_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:contentDescription="Destination Location Icon"

                app:layout_constraintStart_toStartOf="@+id/profile_avatar"
                app:layout_constraintTop_toBottomOf="@+id/dotted_line" />

            <!-- Destination Name -->
            <TextView
                android:id="@+id/destination_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text=""
                android:textStyle="bold"
                style="@style/edittext_style_bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/destination_icon"
                app:layout_constraintTop_toTopOf="@+id/destination_icon" />

            <!-- Destination Address -->
            <TextView
                android:id="@+id/destination_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@+id/destination_icon"
                app:layout_constraintTop_toBottomOf="@+id/destination_address" />

            <!-- Divider separating trip details from summary -->
            <View
                android:id="@+id/divider_trip_summary"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/destination_address" />

            <!-- Trip Summary (Distance & Time) - uses LinearLayout for horizontal grouping -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_trip_summary">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Distance Icon"
                    android:src="@drawable/ic_distance" />

                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2.5 KM"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Time Icon"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="20 Mins"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Action Buttons Container - "I've Arrived" and "Call" buttons -->
    <LinearLayout
        android:id="@+id/bottom_action_buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_trip_update"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/app_theme_main"
            android:text="Start trip"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp" />

        <ImageButton
            android:id="@+id/btn_call"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_button_yellow"
            android:contentDescription="Call Button"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_phone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>