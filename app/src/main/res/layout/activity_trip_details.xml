<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_main"
    tools:context=".triphistory.TripDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        app:layout_constraintTop_toTopOf="parent"

        >



            <ImageView
                android:id="@+id/callText"
                style="@style/enterTxt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:textAllCaps="false"
                android:src="@drawable/ic_arrow_back_white"
                app:tint="@android:color/white"
                android:textSize="14sp"
                tools:ignore="MissingConstraints" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/top_lay"
        tools:ignore="MissingConstraints">

        <ir.beigirad.zigzagview.ZigzagView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:zigzagBackgroundColor="#ffffff"
            app:zigzagElevation="10dp"
            app:zigzagHeight="6dp"
            app:zigzagPaddingContent="16dp"
            app:zigzagShadowAlpha="0.9"
            app:zigzagSides="bottom"

            tools:ignore="MissingClass"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.onepaytaxi.driver.utils.RoundedImageView
                        android:id="@+id/proimg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="top|center_horizontal"

                        android:scaleType="centerCrop"
                        android:src="@drawable/loadingimage" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            style="@style/edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:singleLine="true"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/pure_black"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/draw_curve_rect_accept_end"

                                android:orientation="horizontal">

                                <TextView

                                    style="@style/edittext_style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:id="@+id/payment_type"
                                    android:textColor="@color/pure_white"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/taxitypeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="ssdgsdgsdg"
                                android:textColor="@color/pure_black"
                                android:textSize="12dp"
                                android:visibility="gone" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#D5DDE0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/pickup_time"
                            style="@style/edittext_style"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="" />


                        <TextView
                            android:id="@+id/drop_time"
                            style="@style/edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="65dp"
                            android:text=""
                            android:textColor="#3E4958" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:paddingStart="8dp"

                            android:src="@drawable/ic_new_pick_point"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:paddingStart="8dp"
                            android:src="@drawable/ic_new_line"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:paddingStart="8dp"
                            android:src="@drawable/ic_new_drop"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/pickup_location"
                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="" />


                        <TextView
                            android:id="@+id/drop_location"
                            style="@style/edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:maxLines="2"
                            android:text="" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#D5DDE0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="10dp"

                    android:orientation="vertical">


                    <TextView

                        style="@style/enterTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:singleLine="true"
                        android:text="Fare Breakdown "

                        android:textColor="@color/pure_black"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView

                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Total Traveled Distance "


                            />

                        <TextView
                            android:id="@+id/distance"
                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:singleLine="true"
                            android:text=" "


                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView

                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Trip Amount "


                            />

                        <TextView
                            android:id="@+id/trip_amount"
                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:singleLine="true"
                            android:text=" "


                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView

                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Coupon Savings "


                            />

                        <TextView
                            android:id="@+id/discount_amount"
                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:singleLine="true"
                            android:text=" "


                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="#D5DDE0" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView

                                style="@style/edittext_style_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Total Bill "
                                android:textColor="@color/pure_black"


                                />

                            <TextView

                                android:id="@+id/tax_amount"
                                style="@style/edittext_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:singleLine="true"
                                android:text="tax "
                                android:textColor="#a6a6a6"
                                android:textSize="12dp"


                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/total_bill"
                            style="@style/edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:singleLine="true"
                            android:text=" "


                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="#D5DDE0" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                    <TextView

                        style="@style/edittext_style_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Total Payable "
                        android:textColor="@color/pure_black"


                        />


                    <TextView
                        android:id="@+id/total_payable"
                        style="@style/edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:text=" "


                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#D5DDE0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView

                        style="@style/edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Rating "


                        />

                    <ImageView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/rating1" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView

                        style="@style/edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Comments "


                        />

                    <TextView

                        android:id="@+id/passenger_comments"
                        style="@style/edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text=" "

                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </LinearLayout>


        </ir.beigirad.zigzagview.ZigzagView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>