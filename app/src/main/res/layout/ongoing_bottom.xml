<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clr_transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tripDetails_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pure_white"
            android:orientation="vertical"
            android:visibility="visible">


            <RelativeLayout
                android:id="@+id/tool_lay"
                android:layout_width="fill_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/back_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/back"
                    android:gravity="left"
                    android:padding="10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/headerTxt"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/tripprogress"
                    android:textColor="@color/pure_white" />

            </RelativeLayout>

            <View
                android:id="@+id/trip_view"
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_below="@+id/tool_lay"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/invite_text_gray"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/tripinprogress_lay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speed"
                        android:textColor="@color/btn_accept_light" />

                    <TextView
                        android:id="@+id/tvTaxiSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00km/hr" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/invite_text_gray" />

                <LinearLayout
                    android:id="@+id/waiting_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wait_time"
                        android:textColor="@color/btn_accept_light" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/waiting_time"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="@string/m_timer" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_start"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_play_circle" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/view_line_trip"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/view_tool"

            android:visibility="gone">
            <!-- YOUR STUFF HERE -->
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stop_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/drop_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripDetails_lay"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/pickup_pinlay"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/drop_pin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:paddingLeft="8dp"
                    app:srcCompat="@drawable/circle_red"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/drop_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:hint="@string/droploc"
                    android:lines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/pure_black"
                    android:textColorHint="@color/hint_text_gray"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_emergency_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btn_accept_primary"
                android:gravity="center"
                android:maxWidth="120dp"
                android:minHeight="30dp"
                android:minWidth="70dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="@string/emergency"
                android:textAllCaps="false"
                android:textColor="@color/pure_white"
                android:textSize="12sp"
                android:visibility="gone"
                android:background="@drawable/emergency_contact_btn"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:paddingRight="10dp"
            android:src="@drawable/current_loc"
            app:fabCustomSize="50dp"
            android:visibility="visible"
            app:backgroundTint="@android:color/white"
            app:layout_anchor="@+id/design_bottom_sheet"
            app:layout_anchorGravity="top|right|end" />

        <LinearLayout
            android:id="@+id/design_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="vertical"
            app:behavior_hideable="false"
            app:behavior_peekHeight="102dp"
            app:layout_behavior="@string/bottom_sheet_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distance_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:text="-"
                        android:textColor="@color/pure_black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/r_fare"
                        android:textColor="@color/txt_light_gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/txt_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fare_estimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0.0 m"

                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/waiting_time_txt"
                        android:textColor="@color/txt_light_gray"
                        android:textSize="12sp" />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/txt_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:text="-"
                        android:textColor="@color/pure_black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/waiting_time_txt"
                        android:textColor="@color/txt_light_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/txt_light_gray"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/fare_details"
                android:textColor="@color/txt_light_gray"
                android:textSize="16sp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/min_fare"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="0 Mins"
                        android:textColor="@color/pure_black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/minimum_fare"
                        android:textColor="@color/txt_light_gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_dark_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/below_miles_val"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="5PPL"
                        android:textColor="@color/pure_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/below_miles_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Below 25 mi."
                        android:textColor="@color/txt_light_gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_dark_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/above_miles_val"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/pure_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/above_miles_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="max_size"
                        android:textColor="@color/txt_light_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="bottom|end"
        android:layout_marginBottom="150dp"
        android:layout_above="@+id/start_end_lay">

        <ImageView
            android:id="@+id/botton_layout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="05dp"
            android:visibility="gone"
            android:paddingRight="5dp"
            android:paddingTop="5dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/botton_navi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="05dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/current_loc"
            app:fabCustomSize="50dp"
            android:visibility="gone"
            app:backgroundTint="@color/pure_white"
            app:layout_anchorGravity="top|right|end" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/start_end_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@color/clr_transparent"
        android:gravity="bottom"
        android:orientation="horizontal">


        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actionbar"
            android:layout_weight="1"
            android:background="@drawable/ripple_pink"
            android:onClick="ClickMethod"


            >

            <TextView
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/ride_later"
                android:textColor="#fff" />
        </LinearLayout>-->

        <!--  <View
              android:layout_width="5dp"
              android:layout_height="match_parent"
              android:background="@color/transparent" />-->

        <LinearLayout
            android:id="@+id/book_now_r"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actionbar"
            android:layout_weight="1"
            android:background="@color/btn_accept_primary">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/butt_start_end"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/clr_transparent"
                android:gravity="center"
                android:padding="11dp"
                android:text="@string/start_trip"
                android:textColor="@color/pure_white" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>