<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/curvedbg"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/amtTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cash_payment"
                android:textColor="@color/pure_black"
                android:gravity="center"
                android:padding="5dp"
                android:maxLines="2"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/close_fare_dialog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/close"
                />


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/txt_light_gray"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="@string/r_fare"
                android:textColor="@color/pure_black"
                android:textSize="14sp"
                android:padding="@dimen/dp_5"
                android:gravity="center|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Colon"
                android:textColor="@color/pure_black" />

            <TextView
                android:id="@+id/tv_actual_fare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textColor="@color/pure_black"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="@string/amt_received"
                android:textColor="@color/pure_black"
                android:gravity="center|left"
                android:padding="5dp"
                android:maxLines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Colon"
                android:textColor="@color/pure_black"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SDG"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/pure_black"/>

                <EditText
                    android:id="@+id/amt_Edt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:gravity="center|left"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:imeOptions="actionDone"
                    android:layout_marginRight="@dimen/dp_10"/>
            </LinearLayout>

        </LinearLayout>








        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/txt_light_gray" />

        <LinearLayout
            android:id="@+id/sub_can"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="03dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_failure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@color/clr_transparent"
                android:textColor="@color/pure_black"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/button_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:stateListAnimator="@null"
                android:elevation="10dp"
                android:background="@drawable/ic_new_button_shadow"
                android:orientation="horizontal">




                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/body_iv"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"

                    android:textAllCaps="true"
                    android:padding="10dp"
                    android:text="@string/pay"
                    android:textColor="@color/pure_white"
                    android:textStyle="bold"

                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>